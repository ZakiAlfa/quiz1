<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16sp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ponsel"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvJenis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oppo a5s:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etKayu"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvJenis2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acer Aspire E14:"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/etEbony"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvJenis3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Macbook Pro M3:"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etJati"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <TextView
            android:id="@+id/tvMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Membership: "
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbPerunggu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:onClick="checkButton"
            android:text="Biasa"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbPerak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkButton"
            android:text="Silver"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbEmas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkButton"
            android:text="Gold"
            android:textStyle="bold" />
    </RadioGroup>


    <Button
        android:id="@+id/btPesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="37dp"
        android:text="Pesan" />

    <TextView
        android:id="@+id/tvPesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:text="Pesan"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>